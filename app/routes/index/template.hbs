
<div class="d-flex flex-column justify-content-center align-items-center bg-light p-2 text-center">
  <div class="card w-100">
    <div class="card-body">
      <div class="card-title row">
        <div class="col">
        </div>
        <div class="col-auto">
          <h5 class="card-title">Recipe Search</h5>
        </div>
        <div class="col text-right">
          <button {{on 'click' this.onClickShowSearchOptions}} class="btn btn-outline-primary btn-sm" type="submit">
            {{#if (not this.isSearchOptionsVisible)}}
              Show Options
            {{else}}
              Hide Options
            {{/if}}
          </button>
        </div>
      </div>
      <input class="form-control mr-sm-2 flex-grow-1 text-center" type="search" placeholder="Search for recipe's" aria-label="Search">
      <div class="d-flex flex-row">
        <div class="">
        </div>
        <div class="mx-auto">
        </div>
        <div class="text-right">
          <button class="btn btn-outline-success my-2 btn-w-std" type="submit">Find Recipes</button>
        </div>
      </div>
      {{#if this.isSearchOptionsVisible}}
        <div class="card w-100 mt-1">
          <div class="card-header">
            Advanced Search Criteria
          </div>
          <div class="card-body">
            <p>Search Criteria goes here</p>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>
<div class="d-flex justify-content-around bg-light p-2 w-100">
  <h5 class="text-center">Browse By Category</h5>
</div>
<div class="card-group justify-content-center bg-light">
  {{#each this.appState.settings.categories as |category|}}
    <div {{on 'click' (fn this.onClickTransitionToRecipes category)}} class="m-2">
      <div class="card w-max w-min">
        {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
        <div class="card-body">
          <h5 class="card-title">{{category.title}}</h5>
          <p class="card-text">{{category.description}}</p>
          <p class="card-text"><small class="text-muted">{{compute this.recipeCount category.title}} recipes.</small></p>
        </div>
      </div>
    </div>
  {{/each}}

</div>